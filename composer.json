{
    "name": "acme-widget-co/basket",
    "description": "Acme Widget Co Shopping Basket",
    "type": "library",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "AcmeWidgetCo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcmeWidgetCo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests --level=8"
    }
}
